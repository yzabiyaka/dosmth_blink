{
  "name": "blink",
  "version": "1.4.0",
  "description": "The DoSomething.org Message Bus.",
  "engines": {
    "node": "8.5.0"
  },
  "scripts": {
    "test": "NODE_ENV=test ava",
    "lint": "eslint .",
    "coverage": "NODE_ENV=test nyc --all ava",
    "all-tests": "npm run lint && npm run coverage",
    "html-coverage-report": "nyc report --reporter=html",
    "publish-coverage-report": "nyc report --reporter=lcov && codecov",
    "web": "node start.js web",
    "worker": "node start.js worker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoSomething/blink.git"
  },
  "author": "Sergii Tkachenko <sergii@dosomething.org> (https://github.com/sergii-tkachenko)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DoSomething/blink/issues"
  },
  "homepage": "https://github.com/DoSomething/blink#readme",
  "dependencies": {
    "amqp-uri": "^2.0.0",
    "amqplib": "^0.5.1",
    "chance": "^1.0.11",
    "change-case": "^3.0.1",
    "customerio-node": "^0.2.0",
    "dotenv": "^4.0.0",
    "joi": "^11.1.1",
    "koa": "^2.3.0",
    "koa-basic-auth": "^2.0.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "moment": "^2.18.1",
    "newrelic": "^2.2.1",
    "node-fetch": "^1.7.3",
    "throng": "^4.0.0",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "@dosomething/eslint-config": "^3.1.1",
    "ava": "^0.22.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^2.3.0",
    "eslint": "^4.7.2",
    "eslint-plugin-ava": "^4.2.2",
    "nyc": "^11.2.1",
    "supertest": "^3.0.0"
  },
  "ava": {
    "concurrency": 10,
    "powerAssert": false,
    "failWithoutAssertions": false
  },
  "nyc": {
    "exclude": [
      "config",
      "coverage",
      "test"
    ]
  }
}
